<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="400.0" style="-fx-background-color: #666666;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.groupchat.controller.ClientController">
    <children>
        <VBox layoutX="14.0" layoutY="14.0" prefHeight="572.0" prefWidth="372.0" spacing="10.0">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="372.0" spacing="10.0">
                    <children>
                        <VBox prefWidth="300.0" spacing="5.0">
                            <children>
                                <Label text="Group Chat Client" textFill="#dedb4b">
                                    <font>
                                        <Font name="System Bold" size="18.0" />
                                    </font>
                                    <VBox.margin>
                                        <Insets left="40.0" />
                                    </VBox.margin>
                                </Label>
                                <HBox alignment="CENTER_LEFT" prefHeight="26.0" prefWidth="242.0" spacing="10.0">
                                    <children>
                                        <TextField fx:id="usernameField" prefHeight="26.0" prefWidth="302.0" promptText="Enter your username">
                                            <HBox.margin>
                                                <Insets left="50.0" />
                                            </HBox.margin>
                                        </TextField>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <HBox prefHeight="100.0" prefWidth="200.0" style="-fx-background-color: #66666;">
                    <children>
                        <Button fx:id="connectBtn" onAction="#connectToServer" prefHeight="30.0" prefWidth="91.0" style="-fx-font-weight: bold;" text=" +CONNECT" textFill="#32ac32">
                            <HBox.margin>
                                <Insets left="60.0" top="20.0" />
                            </HBox.margin>
                        </Button>
                        <Button fx:id="disconnectBtn" onAction="#disconnectFromServer" prefHeight="30.0" prefWidth="98.0" style="-fx-font-weight: bold;" text="-DISCONNECT" textFill="#c71616">
                            <HBox.margin>
                                <Insets left="60.0" top="20.0" />
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
                <ScrollPane fx:id="scrollPane" prefHeight="405.0" prefWidth="372.0" style="-fx-background-color: #000000;" vbarPolicy="ALWAYS">
                    <content>
                        <VBox fx:id="chatDisplay" spacing="10.0" />
                    </content>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </ScrollPane>
                <HBox alignment="CENTER" prefHeight="50.0" prefWidth="372.0" spacing="10.0">
                    <children>
                        <TextField fx:id="msgInput" prefHeight="35.0" prefWidth="280.0" promptText="Type your message here..." />
                        <Button fx:id="sendBtn" mnemonicParsing="false" onAction="#sendMsg" prefHeight="26.0" prefWidth="75.0" text="SEND" textFill="#58b924">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font></Button>
                    </children>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
