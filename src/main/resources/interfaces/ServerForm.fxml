<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="400.0" style="-fx-background-color: #666666;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.groupchat.controller.ServerController">
    <children>
        <VBox layoutX="14.0" layoutY="14.0" prefHeight="572.0" prefWidth="372.0" spacing="10.0">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="372.0" spacing="10.0">
                    <children>
                        <VBox prefHeight="50.0" prefWidth="375.0" spacing="5.0">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label text="Group Chat Server" textFill="#dec54b">
                                            <font>
                                                <Font name="System Bold" size="18.0" />
                                            </font>
                                            <HBox.margin>
                                                <Insets left="30.0" />
                                            </HBox.margin>
                                        </Label>
                                        <Button fx:id="stopServerBtn" onAction="#stopServer" prefHeight="28.0" prefWidth="95.0" style="-fx-font-weight: bold;" text="STOP" textFill="#cc2418">
                                            <HBox.margin>
                                                <Insets left="60.0" top="30.0" />
                                            </HBox.margin></Button>
                                    </children>
                                </HBox>
                                <Label fx:id="clientCountLabel" text="Connected Clients: 0" textFill="#666666" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <ScrollPane fx:id="scrollPane" prefHeight="450.0" prefWidth="372.0" style="-fx-background-color: #000000;" vbarPolicy="ALWAYS">
                    <content>
                        <VBox fx:id="chatDisplay" spacing="10.0" />
                    </content>
                </ScrollPane>
                <HBox alignment="CENTER" prefHeight="50.0" prefWidth="372.0" spacing="10.0">
                    <children>
                        <TextField fx:id="msgInput" prefHeight="35.0" prefWidth="280.0" promptText="Type your message here..." />
                        <Button fx:id="sendBtn" mnemonicParsing="false" onAction="#sendMsg" prefHeight="26.0" prefWidth="82.0" text="SEND" textFill="#45ae2e">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font></Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
